movies = {
  Incredibles_2: 4,
  }

puts "Please choose an option: 
Add
Update
Display
Delete
"
choice = gets.chomp

case choice
  when "add"
  puts "Please Choose a Movie: "
  title = gets.chomp
  puts "Give it a rating from 1-5: "
  rating = gets.chomp
  movies[title.to_sym] = rating.to_i
  puts "Movie was added!"
  when "update"
  puts "Updated!"
  when "display"
  puts "Movies!"
  when "delete"
  puts "Deleted!"
else
  puts "Error!"
end
